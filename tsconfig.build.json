{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowImportingTsExtensions": false,
    "rootDir": ".",
    "noEmit": false,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "api/**/*"
  ],
  "exclude": [
    "test/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
