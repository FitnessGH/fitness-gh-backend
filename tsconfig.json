{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ESNext"],
    "baseUrl": "./src",
    "rootDir": "./src",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["*"],
      "@/config/*": ["config/*"],
      "@/types/*": ["types/*"],
      "@/utils/*": ["utils/*"],
      "@/middlewares/*": ["middlewares/*"],
      "@/routes/*": ["routes/*"],
      "@/controllers/*": ["controllers/*"],
      "@/services/*": ["services/*"],
      "@/models/*": ["models/*"],
      "@/core/*": ["core/*"],
      "@/api/*": ["api/*"],
      "@/errors/*": ["errors/*"],
      "@root/*": ["../*"]
    },
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "../test/**/*"
, "src/config/prisma.config.ts"  ],
  "exclude": [
    "node_modules",
    "dist",
    "prisma"
  ]
}
