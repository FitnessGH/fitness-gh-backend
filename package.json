{
  "name": "fitness-gh-backend",
  "type": "module",
  "version": "1.0.0",
  "description": "Fitness GH Backend API",
  "author": "Frank David Addae",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/frankdavid-addae/fitness-gh-backend"
  },
  "keywords": [],
  "main": "src/server.ts",
  "scripts": {
    "postinstall": "prisma generate",
    "start": "node --env-file=.env dist/src/server.js",
    "dev": "tsx watch --env-file=.env src/server.ts",
    "build": "prisma generate && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "build:vercel": "prisma generate && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "lint": "eslint --fix src test",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "vercel:deploy": "vercel",
    "vercel:deploy:prod": "vercel --prod",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "@types/nodemailer": "^7.0.9",
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.7",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.16.2",
    "@types/bcrypt": "^6.0.0",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-serve-static-core": "^4.19.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.10",
    "@types/serve-static": "^1.15.8",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.30.1",
    "eslint-plugin-format": "^1.0.1",
    "prisma": "^6.18.0",
    "supertest": "^7.1.1",
    "tsc-alias": "^1.8.11",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vercel": "^50.9.6",
    "vitest": "^3.2.4"
  }
}
